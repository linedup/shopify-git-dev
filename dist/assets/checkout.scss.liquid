// Paypal image
.alt-payment-list__item--paypal .alt-payment-list__item__link{
  background: #009cde;
  border-radius: 2px;
  color: #fff;
  text-decoration: none;
  img{
    -webkit-filter: grayscale(100%) brightness(100);
    filter: grayscale(100%) brightness(100);
    margin-left: 0.35em;
  }
}

.order-summary__sections {
  height: auto;
}

.checkbox-wrapper--custom{
  padding: 20px 0 0 0;
}

.checkout--mobile {
  @media (min-width: 751px){
    display: none;
  } 
}
.wrap--mobile {
  padding: 0 1em;
}
.checkout--desktop {
  @media (max-width: 750px){
    display: none;
  } 
}

.checkout__custom-checkbox {
  border-top: 1px #d9d9d9 solid;
  margin: 15px 0 0 0;
}

.alternative-payment-separator__content {
  font-family: "Helvetica Neue LT W05_75 Bold",Helvetica,Arial,sans-serif;
  color: #000;
}