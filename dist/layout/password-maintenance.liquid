<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title>{{ shop.name }}</title>

    {{ content_for_header }}

    <style>
      body {
        margin: 0;
        width: 100%;
      }
      .holding-mobile {
        width: 80%;
        margin: 10%;
      }
      .holding-desktop {
        width: 90%;
        margin: 5%;
        display: none;
      }
      @media screen and (min-width: 992px) {
        .holding-mobile {
          display: none;
        }
        .holding-desktop {
          display: block;
        }
      }
    </style>
  
  {% render 'shogun-head' %}
</head>

  <body>
    <main id="MainContent">
      {{ content_for_layout }}
    </main> 
  </body>
</html>
