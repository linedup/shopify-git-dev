<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  {% if section.blocks %}
    {% for block in section.blocks %}
      {% if block.type == 'title' %}

        <div class="grid-container page-margin mb-14 lg:mb-18">
          <div class="col-span-4 md:col-span-8 lg:col-span-6">
            <h3>{{ block.settings.title }}</h3>
          </div>
        </div>

        {% elsif block.type == 'body' %}

        <div class="grid-container page-margin">
          <div class="col-span-4 md:col-span-7 md:col-start-5 lg:col-span-6 lg:col-start-4 mb-14 lg:mb-18">
            <p>{{ block.settings.body }}</p>
          </div>
        </div>

      {% endif %}
    {% endfor %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Body Text",
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "header",
          "content": "Title text"
        },
        { 
          "type": "textarea",
          "id": "title",
          "label": "Title text"
        }
      ]
    },
    {
      "type": "body",
      "name": "Body",
      "settings": [
        {
          "type": "header",
          "content": "Body text"
        },
        { 
          "type": "richtext",
          "id": "body",
          "label": "Body text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Body Text"
    }
  ]
}
{% endschema %}