<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  <div class="grid-container page-margin overflow-hidden">
    <div class="col-span-4 md:col-span-12 flex {% if section.settings.button_center == true %}justify-center{% endif %}">
      <a href="{{ section.settings.link }}" class="button bg-sand mb-4 md:mb-0 min-w-max relative">{{ section.settings.text }}</a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Button",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "button_center",
      "label": "Button center?",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Button"
    }
  ]
}
{% endschema %}