<div class="max-w-screen-2xl mx-auto">
  <div class="grid-container page-margin">
    <div class="col-span-4 md:col-span-8">
      <h2 class="mb-5 md:mb-7">{{ section.settings.featured_blog.title | escape }}</h2>
    </div>
  </div>
  <div class="grid-container page-margin mb-9 lg:mb-18">
    {%- for article in section.settings.featured_blog.articles limit:3 -%}
      {% render 'editorial-gallery-card' blog: section.settings.featured_blog, article: article %}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Editorial Carousel A",
  "settings": [
    { 
      "type": "blog",
      "id": "featured_blog",
      "label": "Blog"
    }
  ],
  "presets": [
    {
      "name": "Editorial Carousel A"
    }
  ]
}
{% endschema %}