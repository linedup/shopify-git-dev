          "label": "Overline"
        },
        { 
          "type": "text",
          "id": "title_1",
          "label": "Title"
        },
        { 
          "type": "image_picker",
          "id": "image_1",
          "label": "Splash image - 1680w"
        },        
        { 
          "type": "text",
          "id": "video_1",
          "label": "Video"
        },
        {
          "type": "header",
          "content": "Right block"
        },
        { 
          "type": "text",
          "id": "overline_2",
          "label": "Overline"
        },
        { 
          "type": "text",
          "id": "title_2",
          "label": "Title"
        },
        { 
          "type": "image_picker",
          "id": "image_2",
          "label": "Splash image - 1680w"
        },        
        { 
          "type": "text",
          "id": "video_2",
          "label": "Video"
        }
      ]
    },
    {
      "type": "image_block",
      "name": "Image block",
      "settings": [
        {
          "type": "header",
          "content": "Left block"
        },
        { 
          "type": "image_picker",
          "id": "image_1",
          "label": "Image - 1680w"
        },   
        { 
          "type": "text",
          "id": "caption_1",
          "label": "Caption"
        },      
        {
          "type": "header",
          "content": "Right block"
        },
        { 
          "type": "image_picker",
          "id": "image_2",
          "label": "Image - 1680w"
        },   
        { 
          "type": "text",
          "id": "caption_2",
          "label": "Caption"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Double Medium Feature"
    }
  ]
}
{% endschema %}