<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  <div class="grid-container page-margin mb-4 lg:mb-6">
    <div class="col-span-4 md:col-span-8 lg:col-span-6">
      <h2>{{ section.settings.title }}</h2>
    </div>
  </div>

  {% if section.blocks %}
      {% for block in section.blocks %}
        {% if block.type == 'video_block' %}

          <div class="grid-container page-margin">
            <div class="col-span-4 md:col-span-6">
              <p class="mb-2">{{ block.settings.overline_1 }}</p>
              <h3 class="mb-4">{{ block.settings.title_1 }}</h3>
              <div class="relative">
                <video-embedded-player>
                  <div data-video-splashscreen>
                    <img src="{{ block.settings.image_1 | img_url: 'master' }}" width="1680" height="1207" loading="lazy">
                    <div data-show-video class="flex absolute top-1/2 transform -translate-y-2/4 left-0 items-center justify-center bg-sand z-5 h-14 lg:h-18 px-5 lg:px-10 w-max cursor-pointer"><img src="{{ 'icon-play.svg' | asset_url }}" loading="lazy" height="20" width="30" alt="Play video"></div>
                  </div>
                  <video controls playsinline class="hidden absolute z-5 inset-0 h-full w-full object-cover">
                    <source src="{{ block.settings.video_1 }}">
                  </video>
                </video-embedded-player>
              </div>
            </div>

            <div class="col-span-4 md:col-span-6">
              <p class="mb-2">{{ block.settings.overline_2 }}</p>
              <h3 class="mb-4">{{ block.settings.title_2 }}</h3>
              <div class="relative">
                <video-embedded-player>
                  <div data-video-splashscreen>
                    <img src="{{ block.settings.image_2 | img_url: 'master' }}" width="1680" height="1207" loading="lazy">
                    <div data-show-video class="flex absolute top-1/2 transform -translate-y-2/4 left-0 items-center justify-center bg-sand z-5 h-14 lg:h-18 px-5 lg:px-10 w-max cursor-pointer"><img src="{{ 'icon-play.svg' | asset_url }}" loading="lazy" height="20" width="30" alt="Play video"></div>
                  </div>
                  <video controls playsinline class="hidden absolute z-5 inset-0 h-full w-full object-cover">
                    <source src="{{ block.settings.video_2 }}">
                  </video>
                </video-embedded-player>
              </div>
            </div>

          </div>
        
        {% elsif block.type == 'image_block' %}

          <div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
            <div class="grid-container page-margin">
              <div class="col-span-4 md:col-span-6">
                <img class="mb-4" src="{{ block.settings.image_1 | img_url: 'master' }}" width="1680" height="1207" loading="lazy">
                <p class="mb-0">{{ block.settings.caption_1 }}</p>
              </div>
              <div class="col-span-4 md:col-span-6">
                <img class="mb-4" src="{{ block.settings.image_2 | img_url: 'master' }}" width="1680" height="1207" loading="lazy">
                <p class="mb-0">{{ block.settings.caption_2 }}</p>
              </div>
            </div>
          </div>

        {% endif %}
      {% endfor %}
    {% endif %}


</div>


