<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  <div class="grid-container page-margin">
    {% for block in section.blocks %}
      <div class="col-span-4 md:col-span-4 lg:col-span-3 mb-5 rte">
        <p class="mb-2">{{ block.settings.title }}</p>
        <h3>{{ block.settings.value }}</h3>
      </div>
    {% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Factory Statistics",
  "settings": [
  ],
  "blocks": [
    {
      "name": "Statistic",
      "type": "statistic",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "value",
          "label": "Value"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Factory Statistics"
    }
  ]
}
{% endschema %}