<div class="grid-container gap-y-4 relative">

  {% for block in section.blocks %}
    {% if block.type == 'title' %}
      <a id="{{ block.settings.title | handleize }}" class="-top-40 absolute">&nbsp;</a>
    {% endif %}
  {% endfor %}

  {% for block in section.blocks %}

    {% if block.type == 'title' %}
      <div class="col-span-4 md:col-span-12 mb-4 mt-5 lg:mt-10">
        <h3>{{ block.settings.title }}</h3>
      </div>
    {% endif %}

    {% if block.type == 'faq' %}
      <div class="col-span-4 md:col-span-12">      

        <reveal-content>
          <div data-reveal class="reveal">
            <div class="flex flex-col md:justify-between p-6 lg:p-8 bg-white">
              <div data-reveal-trigger class="flex justify-between items-center last-p-mb-0 cursor-pointer">
                <p>{{ block.settings.question }}</p>
                <div>
                  <img src="{{ 'icon-plus.svg' | asset_url }}" class="plus" loading="lazy" height="16" width="16" alt="Read more">
                </div>
              </div>
              <span data-reveal-content class="hidden">{{ block.settings.answer }}</span>
            </div>
          </div>
        </reveal-content>

      </div>
    {% endif %}

  {% endfor %}

</div>


{% schema %}
{
  "name": "FAQs section",
  "blocks": [
     {
       "name": "Section Title",
       "type": "title",
       "settings": [
         {
           "type": "text",
           "id": "title",
           "label": "FAQ section title"
         }
       ]
     },     
     {
       "name": "FAQ",
       "type": "faq",
       "settings": [
         {
           "type": "text",
           "id": "question",
           "label": "Question"
         },
        {
           "type": "richtext",
           "id": "answer",
           "label": "Answer"
         }
       ]
     }
   ],
   "presets": [
    {
      "name": "FAQs section"
    }
  ]
}
{% endschema %}