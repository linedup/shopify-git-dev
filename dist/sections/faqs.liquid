<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18 mt-14">
  <div class="grid-container page-margin gap-y-0">

    {% render 'customer-service-sidebar' %}

        <div class="col-span-4 md:col-span-12 lg:col-span-7 mt-6">
          <div class="grid-container">
            <div class="col-span-4 md:col-span-12 hidden lg:grid">
              <h2>{{ page.title }}</h2>
            </div>
            <div class="col-span-4 md:col-span-12 hidden lg:grid">
              <ul class="flex">
                {% for block in section.blocks %}
                  {% if block.type == 'title' %}
                    <li class="mr-6"><a href="#" class="">{{ block.settings.title }}</a></li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
            <div class="col-span-4 md:col-span-12 hidden lg:grid">
              <hr>
            </div>
          </div>
          <div class="grid-container gap-y-4">
            
            {% for block in section.blocks %}

              {% if block.type == 'title' %}
                <div class="col-span-4 md:col-span-12 mb-4 mt-5 lg:mt-10">
                  <h3>{{ block.settings.title }}</h3>
                </div>
              {% endif %}

              {% if block.type == 'faq' %}
                <div class="col-span-4 md:col-span-12">
                  <div>
                    <div class="flex flex-col md:justify-between p-6 lg:p-8 bg-white">
                      <div class="flex justify-between items-center mb-8_">
                        <p>{{ block.settings.question }}</p>
                        <div>
                          <img src="{{ 'icon-plus.svg' | asset_url }}" loading="lazy" height="16" width="16" alt="">
                        </div>
                      </div>
                      <span class="hidden">{{ block.settings.answer }}</span>
                    </div>
                  </div>
                </div>
              {% endif %}

            {% endfor %}

            </div> 
          </div>

  </div>
</div>

{% schema %}
{
  "name": "FAQs",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Carousel header"
    }
  ],
  "blocks": [
     {
       "name": "Section Title",
       "type": "title",
       "settings": [
         {
           "type": "text",
           "id": "title",
           "label": "FAQ section title"
         }
       ]
     },     
     {
       "name": "FAQ",
       "type": "faq",
       "settings": [
         {
           "type": "text",
           "id": "question",
           "label": "Question"
         },
        {
           "type": "richtext",
           "id": "answer",
           "label": "Answer"
         }
       ]
     }
   ],
   "presets": [
    {
      "name": "FAQs"
    }
  ]
}
{% endschema %}