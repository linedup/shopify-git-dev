<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  <div class="grid-container page-margin">
    <div class="col-span-4 md:col-span-8">
      <h2 class="mb-3 md:mb-7">{{ section.settings.title }}</h2>
    </div>
  </div>

  {% assign block_size = section.blocks | size %}
  {% if block_size > 0 %}

  <div class="grid-container page-margin-slider">

    <div class="col-span-4 md:col-span-12 mb-5">
      <div class="glide glide-regularThree">
        <div class="glide__track" data-glide-el="track">

          <ul class="glide__slides">

            {% for block in section.blocks %}
        
              <li class="glide__slide">
              {% if block.settings.link %}<a href="{{ block.settings.link }}" title="{{ block.settings.title }}">{% endif %}
                <img src="{{ block.settings.image | img_url: 'master' }}" class="mb-4" height="1232" width="1094" loading="lazy" alt="{{ block.settings.title }}">
               {% if block.settings.link %}</a>{% endif %}
                <h3 class="mb-4 pr-4 xl:pr-8">{{ block.settings.title }}</h3>
                <p>{{ block.settings.text }}</p>
                {% if block.settings.link %}
                  <a class="link mt-4" href="{{ block.settings.link }}" title="{{ block.settings.title }}">{{ block.settings.button_text }}</a>
                {% endif %}
              </li>

            {% endfor %}

          </ul>

        </div>
        <div data-glide-el="controls">
          <button class="hidden md:flex absolute carousel-arrow-bottom-75 right-0 items-center justify-center bg-sand z-10 h-14 lg:h-18 px-5 lg:px-10 w-max" data-glide-dir=">"><img src="{{ 'carousel-arrow.svg' | asset_url }}" loading="lazy" height="20" width="20" alt="arrow"></button>
        </div>
      </div>
    </div>

  </div>

  {% endif %}
  
</div>

{% schema %}
{
  "name": "Guides - Features/Related",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "name": "Feature/Related Guide",
      "type": "feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select image",
          "info": "Select image for the carousel. Image size 1094w x 1232h."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Guides - Features/Related"
    }
  ]
}
{% endschema %}