<div class="max-w-screen-2xl mx-auto">
  <div class="grid-container page-margin mb-4 lg:mb-6">
    <div class="col-span-4 md:col-span-8 lg:col-span-6">
      <h2>{{ section.settings.title }}</h2>
    </div>
  </div>
  <div class="grid-container pb-4 lg:pb-6">
      <div class="col-span-4 md:col-span-12">
      <div class="glide glide-mobileImageCarouselPeek">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">

            {% if section.blocks %}
              {% for block in section.blocks %}
                {% if block.type == 'image' %}

                  <li class="glide__slide">
                    <div class="flex items-end md:items-center col-span-4 md:col-span-12 image-carousel-image-height relative">
                      {% render 'image' with image_src: block.settings.image, alt_tag: 'Finisterre', classes: 'absolute inset-0 w-full h-128 md:h-160 xl:h-202 object-cover' %}
                    </div>
                  </li>

                {% endif %}
              {% endfor %}
            {% endif %}

          </ul>
        </div>
        <div data-glide-el="controls">
          <button class="flex absolute top-0 right-0 items-center justify-center bg-sand z-10 h-14 lg:h-18 px-5 lg:px-10 w-max" data-glide-dir=">"><img src="{{ 'carousel-arrow.svg' | asset_url }}" loading="lazy" height="20" width="20" alt="Next"></button>
        </div>
      </div>
    </div>
  </div>
  <div class="grid-container page-margin mb-14 lg:mb-18">
    <div class="col-span-4 md:col-span-8 lg:col-span-6">
      <p>{{ section.settings.caption }}</p>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Image Carousel",
  "settings": [
    { 
      "type": "text",
      "id": "title",
      "label": "Section title"
    },
    { 
      "type": "text",
      "id": "caption",
      "label": "Carousel Caption"
    }
  ],
  "blocks": [
  {
    "type": "image",
    "name": "Image Slide",
    "settings": [
      { 
        "type": "image_picker",
        "id": "image",
        "label": "Image - 2725w x 1612h"
      }
    ]
  }
  ],
  "presets": [
    {
      "name": "Image Carousel"
    }
  ]
}
{% endschema %}
