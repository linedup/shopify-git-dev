{% assign sectionTitle = page.title %}
{% assign sectionContent = page.content %}

{% if template.name == 'collection' %}
  {% if current_tags %}
    {% assign sectionTitle = current_tags %}
  {% else %}
    {% assign sectionTitle = collection.title %}
  {% endif %}
  {% assign sectionContent = collection.description %}
{% endif %}

{% if sectionContent != blank %}
  <div class="max-w-screen-2xl mx-auto mb-4 lg:mb-10">
    <div class="grid-container page-margin">
      <div class="col-span-4 md:col-span-8 lg:col-span-6 mt-4">
        <h1 class="mb-5 md:mb-7">{{- sectionTitle -}}</h1>
      </div>
    </div>
    <div class="grid-container page-margin">
      <div class="col-span-4 md:col-span-8 lg:col-span-5 xl:col-span-4">
        <div class="last-p-mb-0">
          {{ sectionContent }}
        </div>
      </div>
    </div>
  </div>
{% elsif template.name == 'collection' %}
  <div class="max-w-screen-2xl mx-auto 0 lg:mb-10">
    <div class="grid-container page-margin">
      <div class="col-span-4 md:col-span-8 lg:col-span-6 mt-4">
        <h1 class="mb-0 lg:mb-7">{{- sectionTitle -}}</h1>
      </div>
    </div>
  </div>
{% else %}
  <div class="max-w-screen-2xl mx-auto mb-4 lg:mb-10">
    <div class="grid-container page-margin">
      <div class="col-span-4 md:col-span-8 lg:col-span-6 mt-4">
        <h1 class="mb-5 md:mb-7">{{- sectionTitle -}}</h1>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Page/Collection Intro"
}
{% endschema %}