<div class="max-w-screen-2xl mx-auto">
  <div class="grid-container page-margin gap-y-4 pb-14 lg:pb-18">
    <div class="flex items-end md:items-center col-span-4 md:col-span-12 h-142 md:h-160 xl:h-202 relative">
      <video-embedded-player>
        <div data-video-splashscreen>
          {% render 'image' with image_src: section.settings.desktop_image, alt_tag: section.settings.alt, classes: 'absolute inset-0 w-full h-full object-cover hidden lg:block', option: 2 %}
          {% render 'image' with image_src: section.settings.mobile_image, alt_tag: section.settings.alt, classes: 'absolute inset-0 w-full h-full object-cover lg:hidden' %}
          <div data-show-video class="flex absolute top-1/2 transform -translate-y-2/4 left-0 items-center justify-center bg-sand z-5 h-14 lg:h-18 px-5 lg:px-10 w-max cursor-pointer"><img src="{{ 'icon-play.svg' | asset_url }}" loading="lazy" height="20" width="30" alt="Play video"></div>
        </div>
        <video controls playsinline class="hidden absolute z-5 inset-0 h-full w-full object-cover">
          <source src="{{ section.settings.video_url }}">
        </video>
      </video-embedded-player>
    </div>
    <p>{{ section.settings.caption }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Large Feature A",
  "settings": [
    {
      "type": "header",
      "content": "Image / Video"
    },
    { 
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop hero image",
      "info": "Image size - 3600w x 1612h"
    },
    { 
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile hero image",
      "info": "Image size - 1534w x 1726h"
    },
    { 
      "type": "text",
      "id": "video_url",
      "label": "Hero video URL",
      "info": "Distribution link from Vimeo. If a video URL is inserted it will overwrite the images, on mobile the video will be cropped from the center and fill the height of the image space."
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Image Caption"
    }
  ],
  "presets": [
    {
      "name": "Large Feature A"
    }
  ]
}
{% endschema %}