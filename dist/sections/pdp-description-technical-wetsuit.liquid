{% if product.metafields.info.model_wears %}
  <div class="hidden md:block max-w-screen-2xl mx-auto mb-8 md:mb-12">
    <div class="grid-container page-margin">
      <div class="col-span-12 md:col-span-6 lg:col-span-5 rte last-p-mb-0">
        {{ product.metafields.info.model_wears }}
      </div>
    </div>
  </div>
{% endif %}

<div class="max-w-screen-2xl mx-auto mb-14 md:mb-18">
  <div class="grid grid-container page-margin">
    <div class="md:order-2 col-span-4 md:col-span-6 lg:col-span-5 mb-12 md:mb-0">
      <p class="mb-8">Performance</p>
      <div class="mb-8">
        <div class="flex justify-between mb-4">
          <div class="flex flex-col justify-between">
            {% if product.metafields.performance.thickness_level == 'Level 1' %}
              <img src="{{ 'icon-dots-one.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 1">
            {% elsif product.metafields.performance.thickness_level == 'Level 2' %}
              <img src="{{ 'icon-dots-two.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 2">
            {% elsif product.metafields.performance.thickness_level == 'Level 3' %}
              <img src="{{ 'icon-dots-three.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 3">
            {% endif %}
            <h3>Thickness</h3>
          </div>
          <div>
            <img src="{{ 'icon-thickness.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Thickness">
          </div>
        </div>       
        {% if product.metafields.performance.thickness_level == 'Level 1' %}
          <p>{{ section.settings.thickness_level_1 }}</p>
        {% elsif product.metafields.performance.thickness_level == 'Level 2' %}
          <p>{{ section.settings.thickness_level_2 }}</p>
        {% elsif product.metafields.performance.thickness_level == 'Level 3' %}
          <p>{{ section.settings.thickness_level_3 }}</p>
        {% endif %}   
      </div>
      <hr class="mb-8">
      <div class="mb-8">
        <div class="flex justify-between mb-4">
          <div class="flex flex-col justify-between">
            {% if product.metafields.performance.flexibility_level == 'Level 1' %}
              <img src="{{ 'icon-dots-one.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 1">
            {% elsif product.metafields.performance.flexibility_level == 'Level 2' %}
              <img src="{{ 'icon-dots-two.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 2">
            {% elsif product.metafields.performance.flexibility_level == 'Level 3' %}
              <img src="{{ 'icon-dots-three.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 3">
            {% endif %}
            <h3>Flexibility</h3>
          </div>
          <div>
            <img src="{{ 'icon-flexibility.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Flexibility">
          </div>
        </div>
        {% if product.metafields.performance.flexibility_level == 'Level 1' %}
          <p>{{ section.settings.flexibility_level_1 }}</p>
        {% elsif product.metafields.performance.flexibility_level == 'Level 2' %}
          <p>{{ section.settings.flexibility_level_2 }}</p>
        {% elsif product.metafields.performance.flexibility_level == 'Level 3' %}
          <p>{{ section.settings.flexibility_level_3 }}</p>
        {% endif %}
      </div>
      <hr class="mb-8">
      <div class="mb-8">
        <div class="flex justify-between mb-4">
          <div class="flex flex-col justify-between">
            {% if product.metafields.performance.water_temperature_level == 'Level 1' %}
              <img src="{{ 'icon-dots-one.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 1">
            {% elsif product.metafields.performance.water_temperature_level == 'Level 2' %}
              <img src="{{ 'icon-dots-two.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 2">
            {% elsif product.metafields.performance.water_temperature_level == 'Level 3' %}
              <img src="{{ 'icon-dots-three.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 3">
            {% endif %}
            <h3>Water Temperature</h3>
          </div>
          <div>
            <img src="{{ 'icon-water-temperature.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Water Temperature">
          </div>
        </div>
        {% if product.metafields.performance.water_temperature_level == 'Level 1' %}
          <p>{{ section.settings.water_temperature_level_1 }}</p>
        {% elsif product.metafields.performance.water_temperature_level == 'Level 2' %}
         <p>{{ section.settings.water_temperature_level_2 }}</p>
        {% elsif product.metafields.performance.water_temperature_level == 'Level 3' %}
          <p>{{ section.settings.water_temperature_level_3 }}</p>
        {% endif %}
      </div>
      <hr>
    </div>

    {% render 'pdp-description', section_delivery: section.settings.delivery, section_specifications: section.settings.specifications %}

  </div>
</div>

{% schema %}
{
  "name": "Technical - description",
  "settings": [
    { 
      "type": "richtext",
      "id": "delivery",
      "label": "Delivery & Returns",
      "info": "You can overwrite this at the product level in custom fields when editing the product."
    },
    { 
      "type": "richtext",
      "id": "specifications",
      "label": "Product Specifications",
      "info": "You can overwrite this at the product level in custom fields when editing the product."
    },
    {
      "type": "header",
      "content": "Thickness"
    },
        {
      "type": "textarea",
      "id": "thickness_level_1",
      "label": "Thickness level 1"
    },
    {
      "type": "textarea",
      "id": "thickness_level_2",
      "label": "Thickness level 2"
    },
    {
      "type": "textarea",
      "id": "thickness_level_3",
      "label": "Thickness level 3"
    },
    {
      "type": "header",
      "content": "Flexibility"
    },
        {
      "type": "textarea",
      "id": "flexibility_level_1",
      "label": "Flexibility level 1"
    },
    {
      "type": "textarea",
      "id": "flexibility_level_2",
      "label": "Flexibility level 2"
    },
    {
      "type": "textarea",
      "id": "flexibility_level_3",
      "label": "Flexibility level 3"
    },
    {
      "type": "header",
      "content": "Water Temperature"
    },
        {
      "type": "textarea",
      "id": "water_temperature_level_1",
      "label": "Water temperature level 1"
    },
    {
      "type": "textarea",
      "id": "water_temperature_level_2",
      "label": "Water temperature level 2"
    },
    {
      "type": "textarea",
      "id": "water_temperature_level_3",
      "label": "Water temperature level 3"
    }
  ],
  "blocks": [
    {
      "type": "key_features",
      "name": "Key Features",
      "settings": [
        { 
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        { 
          "type": "richtext",
          "id": "body",
          "label": "Body text"
        }
      ]
    }
  ]
}
{% endschema %}