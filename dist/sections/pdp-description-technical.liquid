{% if product.metafields.info.model_wears %}
  <div class="max-w-screen-2xl mx-auto mb-8 md:mb-12">
    <div class="hidden md:grid grid-container page-margin">
      <div class="md:col-span-6 lg:col-span-5 rte last-p-mb-0">
        {{ product.metafields.info.model_wears }}
      </div>
    </div>
  </div>
{% endif %}

<div class="max-w-screen-2xl mx-auto mb-14 md:mb-18">
  <div class="grid grid-container page-margin">
    <div class="md:order-2 col-span-4 md:col-span-6 lg:col-span-5 mb-12 md:mb-0">
      <p class="mb-8">Performance</p>
      <div class="mb-8">
        <div class="flex justify-between mb-4">
          <div class="flex flex-col justify-between">
            {% if product.metafields.performance.waterproofing_level == 'Level 1' %}
              <img src="{{ 'icon-dots-one.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 1">
            {% elsif product.metafields.performance.waterproofing_level == 'Level 2' %}
              <img src="{{ 'icon-dots-two.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 2">
            {% elsif product.metafields.performance.waterproofing_level == 'Level 3' %}
              <img src="{{ 'icon-dots-three.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 3">
            {% endif %}
            <h3>Waterproofing</h3>
          </div>
          <div>
            <img src="{{ 'icon-waterproofing.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Waterproofing">
          </div>
        </div>       
        {% if product.metafields.performance.waterproofing_level == 'Level 1' %}
          <p>{{ section.settings.waterproofing_level_1 }}</p>
        {% elsif product.metafields.performance.waterproofing_level == 'Level 2' %}
          <p>{{ section.settings.waterproofing_level_2 }}</p>
        {% elsif product.metafields.performance.waterproofing_level == 'Level 3' %}
          <p>{{ section.settings.waterproofing_level_3 }}</p>
        {% endif %}   
      </div>
      <hr class="mb-8">
      <div class="mb-8">
        <div class="flex justify-between mb-4">
          <div class="flex flex-col justify-between">
            {% if product.metafields.performance.warmth_level == 'Level 1' %}
              <img src="{{ 'icon-dots-one.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 1">
            {% elsif product.metafields.performance.warmth_level == 'Level 2' %}
              <img src="{{ 'icon-dots-two.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 2">
            {% elsif product.metafields.performance.warmth_level == 'Level 3' %}
              <img src="{{ 'icon-dots-three.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 3">
            {% endif %}
            <h3>Warmth</h3>
          </div>
          <div>
            <img src="{{ 'icon-warmth.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Warmth">
          </div>
        </div>
        {% if product.metafields.performance.warmth_level == 'Level 1' %}
          <p>{{ section.settings.warmth_level_1 }}</p>
        {% elsif product.metafields.performance.warmth_level == 'Level 2' %}
          <p>{{ section.settings.warmth_level_2 }}</p>
        {% elsif product.metafields.performance.warmth_level == 'Level 3' %}
          <p>{{ section.settings.warmth_level_3 }}</p>
        {% endif %}
      </div>
      <hr class="mb-8">
      <div class="mb-8">
        <div class="flex justify-between mb-4">
          <div class="flex flex-col justify-between">
            {% if product.metafields.performance.breathability_level == 'Level 1' %}
              <img src="{{ 'icon-dots-one.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 1">
            {% elsif product.metafields.performance.breathability_level == 'Level 2' %}
              <img src="{{ 'icon-dots-two.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 2">
            {% elsif product.metafields.performance.breathability_level == 'Level 3' %}
              <img src="{{ 'icon-dots-three.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 3">
            {% endif %}
            <h3>Breathability</h3>
          </div>
          <div>
            <img src="{{ 'icon-breathability.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Breathability">
          </div>
        </div>
        {% if product.metafields.performance.breathability_level == 'Level 1' %}
          <p>{{ section.settings.breathability_level_1 }}</p>
        {% elsif product.metafields.performance.breathability_level == 'Level 2' %}
         <p>{{ section.settings.breathability_level_2 }}</p>
        {% elsif product.metafields.performance.breathability_level == 'Level 3' %}
          <p>{{ section.settings.breathability_level_3 }}</p>
        {% endif %}
      </div>
      <hr>
    </div>

    {% render 'pdp-description', section_delivery: section.settings.delivery, section_specifications: section.settings.specifications %}

  </div>
</div>

