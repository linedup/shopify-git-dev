    },
    {
      "type": "textarea",
      "id": "waterproofing_level_2",
      "label": "Waterproofing level 2"
    },
    {
      "type": "textarea",
      "id": "waterproofing_level_3",
      "label": "Waterproofing level 3"
    },
    {
      "type": "header",
      "content": "Warmth"
    },
        {
      "type": "textarea",
      "id": "warmth_level_1",
      "label": "Warmth level 1"
    },
    {
      "type": "textarea",
      "id": "warmth_level_2",
      "label": "Warmth level 2"
    },
    {
      "type": "textarea",
      "id": "warmth_level_3",
      "label": "Warmth level 3"
    },
    {
      "type": "header",
      "content": "Breathability"
    },
        {
      "type": "textarea",
      "id": "breathability_level_1",
      "label": "Breathability level 1"
    },
    {
      "type": "textarea",
