{%- assign product_type = product.type | downcase -%}
{%- assign is_gift_voucher = false -%}
{%- if product_type == 'gift cards' or product.handle contains 'gift-card' or  product.handle contains 'e-voucher'  or product.handle contains 'gift-voucher' or product.tags contains 'lived&loved' -%}
  {%- assign is_gift_voucher = true -%}
{%- endif -%}

{% if product.metafields.info.model_wears %}
  <div class="hidden md:block max-w-screen-2xl mx-auto mb-8 md:mb-12">
    <div class="grid-container page-margin">
      <div class="col-span-12 md:col-span-6 lg:col-span-5 rte last-p-mb-0">
        {{ product.metafields.info.model_wears }}
      </div>
    </div>
  </div>
{% endif %}

<div class="max-w-screen-2xl mx-auto mb-14 md:mb-18">
  <div class="grid grid-container page-margin">
    {% render 'pdp-description', is_gift_voucher: is_gift_voucher, section_delivery: section.settings.delivery, section_specifications: section.settings.specifications %}
  </div>
</div>

{% schema %}
{
  "name": "Description",
  "settings": [
    { 
      "type": "richtext",
      "id": "delivery",
      "label": "Delivery & Returns",
      "info": "You can overwrite this at the product level in custom fields when editing the product."
    },
    { 
      "type": "richtext",
      "id": "specifications",
      "label": "Product Specifications",
      "info": "You can overwrite this at the product level in custom fields when editing the product."
    }
  ],
  "blocks": [
    {
      "type": "key_features",
      "name": "Key Features",
      "settings": [
        { 
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        { 
          "type": "richtext",
          "id": "body",
          "label": "Body text"
        }
      ]
    }
  ]
}
{% endschema %}