<image-zoom data-pdp-image-zoom>
  <div data-zoom-container class="invisible relative w-full h-full overflow-y-scroll overflow-x-auto z-50">
    <div class="full-screen-image fixed top-0 h-full w-full bg-white z-90 overflow-y-scroll overflow-x-auto">
      <div data-pdp-image-zoom-glide class="glide glide-full-screen h-full">
        <div class="glide__track h-full" data-glide-el="track">
          <ul class="glide__slides h-full">     
            {% for image in product.images offset:1 %}
              <li class="glide__slide h-full overflow-y-scroll overflow-x-auto">
                <div class="flex items-end relative w-full image-zoom-height">
                  {% render 'image' with image_src: image, alt_tag: product.title, classes: 'absolute object-cover w-full overflow-y-scroll overflow-x-auto', option: 2 %}
                </div> 
              </li>
            {% endfor %}
            {% for image in product.images limit:1 %}
              <li class="glide__slide h-full overflow-y-scroll overflow-x-auto">
                <div class="flex items-end relative w-full image-zoom-height">
                  {% render 'image' with image_src: image, alt_tag: product.title, classes: 'absolute object-cover w-full overflow-y-scroll overflow-x-auto', option: 2 %} 
                </div> 
              </li>
            {% endfor %}
          </ul>
        </div>
        <button data-close-btn class="close-btn cursor-pointer absolute top-0 right-0 button bg-sand"> 
          <img src="{{ 'icon-close.svg' | asset_url }}" alt=>
        </button>
        <div data-glide-el="controls">
          <button class="flex absolute top-2/4 transform -translate-y-2/4 right-0 items-center justify-center bg-sand z-10 h-14 lg:h-18 px-5 lg:px-10 w-max" data-glide-dir=">"><img src="{{ 'carousel-arrow.svg' | asset_url }}" loading="lazy" height="20" width="20" alt="Close"></button>
        </div>
      </div>
    </div>
  </div>
</image-zoom>

{% schema %}
{
  "name": "Image zoom"
}
{% endschema %}