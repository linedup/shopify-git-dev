{% if product.metafields.okendo.summaryData.reviewAverageValue != '0.0' and product.metafields.okendo.summaryData.reviewAverageValue != blank %}
<div class="grid grid-container page-margin max-w-screen-2xl mx-auto mb-4 relative">
  <div id="reviews" class="absolute -top-4 lg:-top-12 left-0">&nbsp;</div>
  <div class="col-span-4 md:col-span-6 lg:col-span-5 col-start-1 page-margin flex justify-between pdp-overall-score">
    <h2 class="review-score">{{ product.metafields.okendo.summaryData.reviewAverageValue }} / 5</h2>
    {% render 'okendo-reviews-product-rating-summary' %}
  </div>
</div>
<div class="grid grid-container page-margin max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  <div class="col-span-4 md:col-span-6 lg:col-span-5 col-start-1 page-margin">
    <div data-oke-reviews-widget data-oke-reviews-product-id="shopify-{{ product.id }}">{{ product.metafields.okendo.ProductReviewsWidgetSnippet }}</div>
  </div>
</div>
{% endif %}