<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  <div class="grid-container page-margin">
    <div class="col-span-4 md:col-span-6 relative">
      <img class="mb-4" src="{{ section.settings.image | img_url: 'master' }}" width="1680" height="1260" loading="lazy">
      <p>{{ section.settings.caption }}</p>
    </div>
    <div class="col-span-4 md:col-span-6 relative">
      <p class="mb-8">Performance</p>


      {% for block in section.blocks %}
        {% if block.type == 'performance' %}

         
          <div class="mb-8">
            <div class="flex justify-between mb-4">
              <div class="flex flex-col justify-between">
                {% if block.settings.performance_level == 'level_1' %}
                  <img src="{{ 'icon-dots-one.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 1">
                  {% elsif block.settings.performance_level == 'level_2' %}
                  <img src="{{ 'icon-dots-two.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 2">
                  {% elsif block.settings.performance_level == 'level_3' %}
                  <img src="{{ 'icon-dots-three.svg' | asset_url }}" width="41" height="9" loading="lazy" alt="Level 3">
                {% endif %}
                {% if block.settings.performance_indicator == 'waterproofing' %}
                  <h3>Waterproofing</h3>
                {% elsif block.settings.performance_indicator == 'warmth' %}
                  <h3>Warmth</h3>
                {% elsif block.settings.performance_indicator == 'breathability' %}
                  <h3>Breathability</h3>
                {% elsif block.settings.performance_indicator == 'thickness' %}
                  <h3>Thickness</h3>
                {% elsif block.settings.performance_indicator == 'flexibility' %}
                  <h3>Flexibility</h3>
                {% elsif block.settings.performance_indicator == 'water_temperature' %}
                  <h3>Water Temperature</h3>
                {% elsif block.settings.performance_indicator == 'recycled' %}
                  <h3>Recycled</h3>
                {% endif %}
              </div>
              <div>
                {% if block.settings.performance_indicator == 'waterproofing' %}
                <img src="{{ 'icon-waterproofing.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Waterproofing">
              {% elsif block.settings.performance_indicator == 'warmth' %}
                <img src="{{ 'icon-warmth.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Warmth">
              {% elsif block.settings.performance_indicator == 'breathability' %}
                <img src="{{ 'icon-breathability.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Breathability">
              {% elsif block.settings.performance_indicator == 'thickness' %}
                <img src="{{ 'icon-thickness.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Thickness">
              {% elsif block.settings.performance_indicator == 'flexibility' %}
                <img src="{{ 'icon-flexibility.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Flexibility">
              {% elsif block.settings.performance_indicator == 'water_temperature' %}
                <img src="{{ 'icon-water-temperature.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Water Temperature">
              {% elsif block.settings.performance_indicator == 'recycled' %}
                <img src="{{ 'icon-recycled.svg' | asset_url }}" width="52" height="52" loading="lazy" alt="Recycled">
              {% endif %}
              </div>
            </div>       
              <p>{{ block.settings.performance_copy }}</p>  
          </div>
          <hr class="mb-8">

        {% endif %}
      {% endfor %}

    </div>
  </div>
</div>


{% schema %}
{
  "name": "Product In Adventure",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Image size - 1680w x 1260h"
    },
    { 
      "type": "text",
      "id": "caption",
      "label": "Caption"
    }
  ],
  "blocks": [
    {
      "type": "performance",
      "name": "Performance",
      "settings": [
        {
          "type": "select",
          "id": "performance_indicator",
          "label": "Performance Indicator",
          "options": [
            {
              "value": "waterproofing",
              "label": "Waterproofing"
            },
            {
              "value": "warmth",
              "label": "Warmth"
            },
            {
              "value": "breathability",
              "label": "Breathability"
            },
            {
              "value": "thickness",
              "label": "Thickness"
            },
            {
              "value": "flexibility",
              "label": "Flexibility"
            },
            {
              "value": "water_temperature",
              "label": "Water Temperature"
            },
            {
              "value": "recycled",
              "label": "Recycled"
            }
          ]
        },
        {
          "type": "select",
          "id": "performance_level",
          "label": "Performance Level",
          "options": [
            {
              "value": "level_1",
              "label": "Level 1"
            },
            {
              "value": "level_2",
              "label": "Level 2"
            },
            {
              "value": "level_3",
              "label": "Level 3"
            }
          ]
        },
        { 
          "type": "textarea",
          "id": "performance_copy",
          "label": "Performance copy"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product In Adventure"
    }
  ]
}
{% endschema %}