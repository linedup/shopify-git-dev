<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  <div class="grid-container page-margin">
    <div class="col-span-4 md:col-span-9 lg:col-span-8 xl:col-span-7">
      <blockquote class="h1 mb-3 md:mb-7">{{ section.settings.quote }}</blockquote>
      <p>{{ section.settings.credit }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Pull Quote",
  "settings": [
    { 
      "type": "richtext",
      "id": "quote",
      "label": "Quote",
      "info": "Quote marks have already been applied."
    },
    { 
      "type": "textarea",
      "id": "credit",
      "label": "Quote credit"
    }
  ],
  "presets": [
    {
      "name": "Pull Quote"
    }
  ]
}
{% endschema %}