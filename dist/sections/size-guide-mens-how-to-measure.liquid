<div data-size-guide-men id="mens-how-to-measure" class="size-guide-men max-w-screen-2xl mx-auto mb-14 lg:mb-18">
  <div class="grid-container mb-8">
    <div class="col-span-4 md:col-span-8 lg:col-span-7 xl:col-span-6">
      <h3 class="mb-4">{{ section.settings.title }}</h3>
      <p>{{ section.settings.text }}</p>
    </div>
  </div>
  <div class="grid-container">

    {% for block in section.blocks %}

      <div class="col-span-4 md:col-span-6 lg:col-span-4">
        {% render 'image' with image_src: block.settings.image, classes: 'mb-4' %}
        <h3 class="mb-4">{{ block.settings.title }}</h3>
        <p>{{ block.settings.text }}</p>
      </div>

    {% endfor %}

  </div>
</div>

{% schema %}
{
  "name": " Men's How To Measure",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Body text"
    }
  ],
  "blocks": [
    {
      "type": "how-to-measure",
      "name": "How To Measure",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1094px width - make sure these images are all the same height."
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Body text"
        }
      ]
    }
  ]
}
{% endschema %}