<div data-size-guide-men id="mens-tops-jackets" class="size-guide-men mb-14 lg:mb-18">
  <size-guide>
    <div class="grid-container">
      <div class="col-span-4 md:col-span-12 grid">
        <h3>Men's Tops &amp; Jackets</h3>
      </div>
      <div class="col-span-4 md:col-span-12 flex flex-row mb-10">
        <div data-btn-cm class="button-size-guide-active">CM</div>
        <div data-btn-inch class="button-size-guide-inactive">IN</div>
      </div>
    </div>
    <div class="grid-container gap-y-0">
      <div class="grid col-span-4 md:col-span-12 grid-cols-9 gap-5 gap-y-0 mb-5">
        <div class="col-span-1"></div>
        <div class="col-span-2">Height</div>
        <div class="col-span-2">Chest</div>
        <div class="col-span-2">Waist</div>
      </div>

      {% for block in section.blocks %}
        {% if block.type == 'size' %}

          <div data-sizes-cm class="grid col-span-4 md:col-span-12 grid-cols-9 gap-5 gap-y-0 mt-5">
            <div class="col-span-1">{{ block.settings.size_label }}</div>
            <div class="col-span-2">{{ block.settings.size_1_cm }} <span class="hidden md:inline">cm</span></div>
            <div class="col-span-2">{{ block.settings.size_2_cm }} <span class="hidden md:inline">cm</span></div>
            <div class="col-span-2">{{ block.settings.size_3_cm }} <span class="hidden md:inline">cm</span></div>
            <div class="border-b border-black right-0 col-span-8 col-start-2 mt-5"></div>
          </div>
          <div data-sizes-inch class="grid col-span-4 md:col-span-12 grid-cols-9 gap-5 gap-y-0 mt-5 inches hidden">
            <div class="col-span-1">{{ block.settings.size_label }}</div>
            <div class="col-span-2">{{ block.settings.size_1_in }}</div>
            <div class="col-span-2">{{ block.settings.size_2_in }}</div>
            <div class="col-span-2">{{ block.settings.size_3_in }}</div>
            <div class="border-b border-black right-0 col-span-8 col-start-2 mt-5"></div>
          </div>

        {% endif %}
      {% endfor %}

    </div>
  </size-guide>
</div>

{% schema %}
{
  "name": "Size - Men's Top/Jacket",
  "class": "w-full",
  "settings": [
  ],
  "blocks": [
     {
       "name": "Sizes",
       "type": "size",
       "settings": [
         {
           "type": "text",
           "id": "size_label",
           "label": "Insert size label",
           "info": "XS, S, or 32R for example"
        },
        {
          "type": "header",
          "content": "Centimeters"
        },
        {
          "type": "text",
          "id": "size_1_cm",
          "label": "Height measurement",
          "info": "165-170 for example."
        },
        {
          "type": "text",
          "id": "size_2_cm",
          "label": "Chest measurement",
          "info": "165-170 for example."
        },
        {
          "type": "text",
          "id": "size_3_cm",
          "label": "Waist measurement",
          "info": "165-170 for example."
        },
        {
          "type": "header",
          "content": "Inches"
        },
        {
          "type": "text",
          "id": "size_1_in",
          "label": "Height measurement",
          "info": "28-30 for example (insert quote marks for inches)."
        },
        {
          "type": "text",
          "id": "size_2_in",
          "label": "Chest measurement",
          "info": "28-30 for example (insert quote marks for inches)."
        },
        {
          "type": "text",
          "id": "size_3_in",
          "label": "Waist measurement",
          "info": "28-30 for example (insert quote marks for inches)."
        }
       ]
     }
   ]
}
{% endschema %}