<div class="grid grid-cols-1 gap-y-5 lg:gap-y-10">
  <div class="col-span-1">
    <h3>Account</h3>
  </div>
  <div class="col-span-4 md:col-span-12">
    <div>
      <p class="mb-2"><a href="{{ routes.account_url }}" class="link">Orders ({{ customer.orders_count }})</a></p>
      {% comment %} <p class="mb-2"><a href="{{ routes.account_addresses_url }}" class="link">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</a></p> {% endcomment %}
      {% comment %} <p class="mb-6"><a href="" class="link">Email Preferences</a></p> {% endcomment %}
      <hr class="w-full h-px inline-block lg:block bg-richBlack my-8">
      <p class="mb-2"><a href="{{ routes.account_logout_url }}" class="link">Log Out</a></p>
    </div>
  </div>
  <div class="col-span-4 md:col-span-12 flex justify-center mb-8 mt-4 lg:hidden">
    <hr class="w-full h-px inline-block bg-richBlack">
  </div>
</div>