<div class="col-span-2 md:col-span-1">
  <div class="grid grid-cols-4 gap-5 lg:gap-10">
    <div class="col-span-2">
      {%- if line_item.product.url != blank -%}<a href="{{ line_item.product.url }}">{%- endif -%}
      {% if line_item.image != blank %}
        {% comment %} It does not seem possible to add a size to the image_url here {% endcomment %}
        <img src="{{ line_item.image | image_url }}" height="1140" width="854" loading="lazy" alt="{{- line_item.title -}}">
      {% else %}
        <img src="{{ 'product-no-image.jpg' | asset_img_url: 'master' }}" height="1140" width="854" loading="lazy" alt="{{- line_item.title -}}">
      {% endif %}
      {%- if line_item.product.url != blank -%}</a>{%- endif -%}
    </div>
    <div class="col-span-2">
      <p class="mb-2">
        {%- if line_item.product.url != blank -%}
          <a href="{{ line_item.product.url }}">{{ line_item.title }}</a>
        {%- else -%}
          {{ line_item.title }}
        {%- endif -%}
      </p>
      <p class="mb-2">Quantity: {{ line_item.quantity }}</p>
      {% comment %} <p>{{ line_item.original_price | money }}</p> {% endcomment %}
      <p>{{ line_item.final_price | money }}</p>
    </div>
  </div>
</div>