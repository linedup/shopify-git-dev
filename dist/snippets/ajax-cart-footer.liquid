<div class="grid grid-cols-12 border-t-2 pt-4 border-richBlack">
  <div class="col-span-12 flex justify-between mb-4">
    <p>Subtotal</p>
    <p>{{ cart.total_price | money }}</p>
  </div>
  <div class="col-span-12 flex justify-between mb-4 lg:mb-8">
    <a href="/checkout" class="bg-richBlack w-full button-left cursor-pointer text-white">Checkout</a>
  </div>
  <div class="col-span-12 flex justify-between">
    <div data-localization-UK>{{ settings.shipping_localized_uk }}</div>
    <div data-localization-EU class="hidden">{{ settings.shipping_localized_eu }}</div>
    <div data-localization-USA class="hidden">{{ settings.shipping_localized_usa }}</div>
  </div>
</div>