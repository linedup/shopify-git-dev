<div class="max-w-screen-2xl mx-auto">
  <div class="grid-container pb-4 lg:pb-6">
    <div class="col-span-4 md:col-span-12">
      <div class="glide glide-mobileImageCarouselPeek">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">

              <li class="glide__slide">
                <div class="flex items-end md:items-center col-span-4 md:col-span-12 image-carousel-image-height_ relative_">
                  <img src="{{ image.src }}" height="1612" width="2725" loading="lazy" class="absolute_ inset-0 image-carousel-image-height_ object-cover w-full" alt="{{ image.filename }}">                  
                </div>
              </li>

          </ul>
        </div>
        <div data-glide-el="controls">
          <button class="flex absolute top-0 right-0 items-center justify-center bg-sand z-10 h-14 lg:h-18 px-5 lg:px-10 w-max" data-glide-dir=">"><img src="{{ 'carousel-arrow.svg' | asset_url }}" loading="lazy" height="20" width="20" alt="arrow"></button>
        </div>
      </div>
    </div>
  </div>
  {% if metaData.carousel_caption[index] %}
  <div class="grid-container page-margin mb-14 lg:mb-18">
    <div class="col-span-4 md:col-span-8 lg:col-span-6">
      <p>{{ metaData.carousel_caption[index] }}</p>
    </div>
  </div>
  {% endif %}
</div>