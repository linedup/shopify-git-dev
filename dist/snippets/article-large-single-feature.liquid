<div class="max-w-screen-2xl mx-auto">
  <div class="grid-container pb-14 lg:pb-18">
    <div class="col-span-4 md:col-span-12 mb-5">
      <div class="flex items-end md:items-center col-span-4 md:col-span-12 h-142 md:h-160 xl:h-202 relative">
        {% for image in metaData.large_single_feature_image[index] %}
          {% render 'image' with image_src: image, alt_tag: 'Finisterre', classes: 'absolute inset-0 w-full h-128 md:h-160 xl:h-202 object-cover', option: 2 %}        
        {% endfor %}
        <div class="relative h-auto bg-white w-full mr-5 md:ml-10 md:w-7/12 lg:w-5/12">
          <div class="overflow-hidden">
            <div class="p-5 lg:p-8">
              <h3 class="mb-2 lg:mb-3 ellipsis-1-line">{{- metaData.large_single_feature_title[index] | escape -}}</h3>
              <p class="ellipsis-2-line">{{ metaData.large_single_feature_text[index] | newline_to_br }}</p>
            </div>
            {% comment %} The next variable names are restricted in length by ACF {% endcomment %}
            <a class="bg-sand button" href="{{ article.metafields.article.large_single_feature_button_ur[index] }}">{{ metaData.large_single_feature_button_te[index] }}</a>
          </div>               
        </div>
      </div>
    </div>
  </div>
</div>