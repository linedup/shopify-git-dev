            {%- assign country_name = 'IS' -%}
          {%- elsif country_name == 'Hong Kong SAR' -%}
            {%- assign country_name = 'HK' -%}
          {%- elsif country_name == 'Switzerland' -%}
            {%- assign country_name = 'CH' -%}
          {%- elsif country_name == 'Norway' -%}
            {%- assign country_name = 'NO' -%}
          {%- elsif country_name == 'Japan' -%}
            {%- assign country_name = 'JP' -%}
          {%- elsif country_name == 'Cayman Islands' -%}
            {%- assign country_name = 'KY' -%}
          {%- elsif country_name == 'Russia' -%}
            {%- assign country_name = 'RU' -%}
          {%- elsif country_name == 'Singapore' -%}
            {%- assign country_name = 'SG' -%}
          {%- elsif country_name == 'United States' -%}
            {%- assign country_name = 'USA' -%}
          {%- elsif country_name == 'United Kingdom' -%}
            {%- assign country_name = 'UK' -%}
          {%- endif -%}
          <option value="{{ country.iso_code }}"{% if country.iso_code == localization.country.iso_code %} selected="selected"{% endif %}>{{ country_name }}&nbsp;&nbsp;{{ country.currency.symbol }}</option>
        {%- endfor -%}
      </select>
    </div>

  {% endform %}
</localization-form>