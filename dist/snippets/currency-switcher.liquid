<localization-form>
  {% comment %} set ID to blank to avoid duplication issues as also repeated in {% endcomment %}
  {% form 'localization', id: null %}

    <div class="select-dropdown-container">
      {% comment %} To do: Avoid using the inline syle here, but note the select-dropdown is also used for the filters {% endcomment %}
      <select data-currency-switcher name="country_code" class="select-dropdown" style="margin-right:5px;">
        {%- for country in localization.available_countries -%}
          {%- assign country_name = country.name -%}
          {%- if country_name == 'Austria' -%}
            {%- assign country_name = 'AT' -%}
          {%- elsif country_name == 'Belgium' -%}
            {%- assign country_name = 'BE' -%}
          {%- elsif country_name == 'Bulgaria' -%}
            {%- assign country_name = 'BG' -%}
          {%- elsif country_name == 'Croatia' -%}
            {%- assign country_name = 'HR' -%}
          {%- elsif country_name == 'Cyprus' -%}
            {%- assign country_name = 'CY' -%}
          {%- elsif country_name == 'Czechia' -%}
            {%- assign country_name = 'CZ' -%}
          {%- elsif country_name == 'Denmark' -%}
            {%- assign country_name = 'DK' -%}
          {%- elsif country_name == 'Estonia' -%}
            {%- assign country_name = 'EE' -%}
          {%- elsif country_name == 'Finland' -%}
            {%- assign country_name = 'FI' -%}
          {%- elsif country_name == 'France' -%}
            {%- assign country_name = 'FR' -%}
          {%- elsif country_name == 'Germany' -%}
            {%- assign country_name = 'DE' -%}
          {%- elsif country_name == 'Guernsey' -%}
            {%- assign country_name = 'GG' -%}
          {%- elsif country_name == 'Greece' -%}
            {%- assign country_name = 'GR' -%}
          {%- elsif country_name == 'Hungary' -%}
            {%- assign country_name = 'HU' -%}
          {%- elsif country_name == 'Ireland' -%}
            {%- assign country_name = 'IE' -%}
          {%- elsif country_name == 'Italy' -%}
            {%- assign country_name = 'IT' -%}
          {%- elsif country_name == 'Isle of Man' -%}
            {%- assign country_name = 'IM' -%}
          {%- elsif country_name == 'Jersey' -%}
            {%- assign country_name = 'JE' -%}
          {%- elsif country_name == 'Latvia' -%}
            {%- assign country_name = 'LV' -%}
          {%- elsif country_name == 'Lithuania' -%}
            {%- assign country_name = 'LT' -%}
          {%- elsif country_name == 'Luxembourg' -%}
            {%- assign country_name = 'LU' -%}
          {%- elsif country_name == 'Malta' -%}
            {%- assign country_name = 'MT' -%}
          {%- elsif country_name == 'Netherlands' -%}
            {%- assign country_name = 'NL' -%}
          {%- elsif country_name == 'Poland' -%}
            {%- assign country_name = 'PL' -%}
          {%- elsif country_name == 'Portugal' -%}
            {%- assign country_name = 'PT' -%}
          {%- elsif country_name == 'Romania' -%}
            {%- assign country_name = 'RO' -%}
          {%- elsif country_name == 'Slovakia' -%}
            {%- assign country_name = 'SK' -%}
          {%- elsif country_name == 'Slovenia' -%}
            {%- assign country_name = 'SI' -%}
          {%- elsif country_name == 'Spain' -%}
            {%- assign country_name = 'ES' -%}
          {%- elsif country_name == 'Sweden' -%}
