<cart-drawer id="cart-drawer" {% if cart == empty %}class="is-empty"{% endif %}>

  <div class="menu-drawer right mobile-nav-height fixed h-screen z-80 drawer-start-position-right drawer-width drawer-duration invisible overflow-y-scroll overflow-x-hidden bg-platinum mt-18-5 lg:mt-0">

    <div class="flex flex-col mx-5 py-8 mobile-nav-height">

      <!-- Cart message and close -->
      <ul class="flex flex-shrink-0 relative justify-between items-center mb-10">
        <li class="hidden lg:flex">
          <button class="close-btn cursor-pointer">
            <img src="{{ 'icon-close.svg' | asset_url }}" width="25" height="25" loading="lazy" alt="Close">
          </button>
        </li>
        <li class="flex-grow px-5">
          <div class="text-sm text-center">{%- if settings.cart_promotion_text_1 != blank -%}{{ settings.cart_promotion_text_1 }}{%- else -%}Your basket{%- endif -%}</div>
        </li>
        <li class="hidden lg:flex">
          <span>&nbsp;&nbsp;</span>
        </li>
      </ul>
      <!-- Cart message and close -->
  
      <!-- Promotion -->
      <div class="flex-shrink-0 relative">
        {% render 'cart-promotion' %}
      </div>
    
      <div class="cart-drawer-body hide-scrollbar">

        {% comment %} Content hidden/shown via css inheritance {% endcomment %}
        <div class="cart-drawer-empty">
          <div class="w-full">
            <div class="bg-white mb-10">
              <p class="py-6 px-10">Your basket is empty.</p>
            </div>
            {%- if settings.empty_cart_sub_title != blank -%}
              <p class="mb-2">{{ settings.empty_cart_sub_title }}</p>
              {%- if settings.empty_cart_link != blank -%}
                <h3 class="mb-4"><a href="{{ settings.empty_cart_link }}" class="link">{{ settings.empty_cart_title }}</a></h3>
                  {% render 'image' with image_src: settings.empty_cart_image, alt_tag: settings.empty_cart_title %}
                </a>
              {%- else -%}
                <h3 class="mb-4"><span class="link">{{ settings.empty_cart_title }}</span></h3>
                {% render 'image' with image_src: settings.empty_cart_image, alt_tag: settings.empty_cart_title %}
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>
    
       {% comment %} Content hidden/shown via css inheritance {% endcomment %}
        <div class="cart-drawer-not-empty">
          <div class="w-full">
            <cart-items id="ajax-cart-items" data-id="ajax-cart-items">
              {% render 'ajax-cart-items' %}
            </cart-items>
          </div>
        </div>

      </div>

      <div class="cart-drawer-not-empty">
        <div class="flex-shrink-0 relative">
          <div id="ajax-cart-footer" data-id="ajax-cart-footer">
            {% render 'ajax-cart-footer' %}
          </div>
        </div>
      </div>
          
    </div>

  </div>

</cart-drawer>