<div class="col-span-4 md:col-span-12 mb-5">
  <div class="flex items-end md:items-center col-span-4 md:col-span-12 h-142 md:h-160 xl:h-202 relative">
    {% if article.metafields.article.landscape_featured_image != blank %}
      {% for image in article.metafields.article.landscape_featured_image %}
        {% render 'image' with image_src: image.src, alt_tag: article.title, classes: 'absolute inset-0 w-full h-128 md:h-160 xl:h-202 object-cover' %}
      {% endfor %}
    {% else %}
      {% render 'image' with image_src: image, alt_tag: article.title classes: 'absolute inset-0 w-full h-128 md:h-160 xl:h-202 object-cover' %}
    {% endif %}
    <div class="relative h-auto bg-white w-full mr-5 md:ml-10 md:w-7/12 lg:w-5/12">
      <div class="overflow-hidden">
        <div class="p-5 lg:p-8">
          <h3 class="mb-2 lg:mb-3 ellipsis-1-line">{{ article.title }}</h3>
          <p class="ellipsis-2-line">{{ article.excerpt }}</p>
        </div>
        <a class="bg-sand button" href="{{ article.url }}">Read the Story</a>
      </div>               
    </div>
  </div>
</div>