<footer>
  <div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18">
    <div class="grid-container page-margin gap-y-0">
      <div class="col-span-4 md:col-span-12 lg:col-span-6 mb-14 lg:mb-18">
        {% render 'footer-newsletter-form' %}
      </div>
      <div class="col-span-3 md:col-span-10 lg:col-span-3">
        <reveal-content>
          <ul class="flex flex-col">
            {% for link in linklists.footer.links %}
              {% assign linkTitle = link.title | downcase %}
              <li data-reveal class="mb-4 {% if linkTitle contains 'mobile only' %}lg:hidden{% endif %}">
                <div class="flex">
                  <div data-reveal-trigger class="flex items-center cursor-pointer"><span class="link self-start">{{ link.title | replace: " (mobile only)", "" }}</span><img class="ml-2 arrow" src="{{ 'dropdown-link.svg' | asset_url }}" width="20" height="20" loading="lazy" alt="arrow"></div>
                </div>
                {% if link.links != blank %}
                  <div data-reveal-content class="hidden mt-4">
                    <ul>
                      {% for child_link in link.links %}  
                        <li><a href="{{ child_link.url }}">{{ child_link.title }}</a>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </reveal-content>
      </div>
      <div class="hidden lg:block lg:col-span-2">
        <ul class="flex flex-col">
        {% for link in linklists.social.links %}
          <li class="mb-4"><a href="{{ link.url }}" target="_blank" class="flex items-center">{{ link.title }}</a></li>
        {% endfor %}
        </ul>
      </div>
      <div class="col-span-1 md:col-span-2 lg:col-span-1">
        <div class="flex flex-row justify-end">
          <a href="https://bcorporation.uk" target="_blank" title="Certified B Corporation"><img src="{{ 'b-corp-logo.svg' | asset_url }}" width="59" height="90" loading="lazy" alt="Certified B Corporation"></a>
        </div>
      </div>
    </div>
    <div class="grid-container page-margin gap-y-0">
      <div class="col-span-4 md:col-span-12">
        <p>&copy; Copyright {{ 'now' | date: "%Y" }} Finisterre.</p>
      </div>
    </div>
  </div>
</footer>