<script type="template/klevu" id="klevuQuickPageSuggestionsCustom">

  <% if(data.query.cmsCompressed) { %> 
    <% if(data.query.cmsCompressed.result.length > 0 ){ %> 
      <div class="klevuAutoSuggestionsWrap_ klevuCmsSuggestions_ page-margin mb-4" id="klevuCmsContentArea"> 
        <div class="klevuSuggestionHeading_ mb-2 pt-5">
          <span class="klevuHeadingText_"><%=helper.translate("The Broadcast")%></span>
        </div> 
        <ul> <% helper.each(data.query.cmsCompressed.result,function(key,cms){ %> 
          <li class="product-tag w-max mb-2" tabindex="-1"><a target="_self" href="<%=cms.url%>" class="klevu-track-click" data-url="<%=cms.url%>" data-name="<%=cms.name%>"><%=cms.name%></a></li> 
          <% }); %> 
        </ul> 
      </div> 
    <% } %> 
  <% } %>

</script>