{% if isH1 %}
  <h1 class="h3 mb-2 md:mb-4">{{ product.title | escape }}</h1>
{% else %}
  <div class="h3 mb-2 md:mb-4">{{ product.title | escape }}</div>
{% endif %}

{% assign my_product = product.selected_or_first_available_variant %}

<div class="mb-2 md:mb-4">
  {% if my_product.compare_at_price > my_product.price %}
    <p data-pdp-compare-at-price class="line-through mr-4 inline">{{ my_product.compare_at_price | money }}</p>
  {% else %}
    <p data-pdp-compare-at-price class="line-through mr-4 inline hidden"></p>
  {% endif %}
  <p data-pdp-price class="text-purpleNavy inline">{{ my_product.price | money }}</p>
</div>
<div class="mb-8 md:mb-12">
  <a href="#reviews">
    {% render 'okendo-reviews-product-rating-summary' %}
  </a>
</div>