{% if meta_data.all_available_colours.size > 0 %}
  {% assign availableColours = meta_data.all_available_colours | split: ',' %}
  {% assign availableColourSwatches = meta_data.colour_swatches | split: ',' %}
  {% assign currentColour = meta_data.colour | handleize %}
  <div data-colours class="plp-swatch-boxes mb-4 mt-10">
    {% for colour in availableColours %}
      {% assign myColour = colour | handleize %}
      {% assign colourSwatch = availableColourSwatches[forloop.index0] %}
      <span data-colour-swatch data-handle="{{ meta_data.product_handle_without_colour }}-{{ myColour }}" class="plp-swatch-box relative bg-contain" style="background-image:url('{{ colourSwatch | file_url }}');">
        <span data-selected-colour-swatch class="{% if currentColour != myColour %}hidden{% endif %} absolute transform rotate-90 -top-7 left-2/4 -translate-x-2/4">
          <svg width="17" height="14" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><path d="M-1-3h20v20H-1z"/><path d="m1 6.496 14.091.001L10 1.446l.701-.696L17 7l-6.299 6.25-.701-.696 5.097-5.057H1v-1z" stroke="#010B13" stroke-width=".25" fill="#010B13"/></g></svg>
        </span>
      </span>
    {% endfor %}
  </div>
{% endif %}