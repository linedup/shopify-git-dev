<product-form-plp data-product-form>
  {%- form 'product', product, id: null, class: 'form', novalidate: 'novalidate' -%}
    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
    <input type="hidden" name="quantity" value="1">
    {% comment %} Available sizes {% endcomment %}
    {% unless product.has_only_default_variant %}
      <div data-ajax-product-card-variants>
        {% render 'product-card-quickbuy-variants', product: product %}
      </div>
    {% endunless %}
  {%- endform -%}
</product-form-plp>