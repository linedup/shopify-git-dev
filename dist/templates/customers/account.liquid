{% assign numElementsPerPage = 20 %}

<div class="max-w-screen-2xl mx-auto mb-14 lg:mb-18 mt-14">
  <div class="grid-container page-margin gap-y-0">
    <div class="col-span-4 md:col-span-12 lg:col-span-3">
      {% render 'account-navigation' %}
    </div>

    <div class="col-span-4 md:col-span-12 lg:col-span-9">
      <div class="grid-container">
        <div class="col-span-4 md:col-span-12 hidden lg:grid">
          <h2>Orders</h2>
        </div>

        {% paginate customer.orders by numElementsPerPage %}

          {%- for order in customer.orders -%}
            {% render 'account-order' order: order %}
          {%- endfor -%}            

          {%- if paginate.pages > 1 -%}

            {% if paginate.previous.is_link %}
              <div class="col-span-4 md:col-span-12">
                <a href="{{ paginate.previous.url }}" class="button bg-sand mb-4 md:mb-0 min-w-max relative">
                  <span data-label>Previous</span>
                </a>
              </div>
            {% endif %}
            {% if paginate.next.is_link %}
              <div class="col-span-4 md:col-span-12">
                <a href="{{ paginate.next.url }}" class="button bg-sand mb-4 md:mb-0 min-w-max relative">
                  <span data-label>Next</span>
                </a>
              </div>
            {% endif %}

          {%- endif -%}

        {% endpaginate %}

      </div> 
    </div>

</div>
